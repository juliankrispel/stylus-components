prefix(rule, value...)
    -webkit-{rule} : value;  
    -moz-{rule}    : value;  
    -o-{rule}      : value; 
    -ms-{rule}     : value; 
    {rule}         : value;  

micro-clearfix()
    &:before, &:after
        content: ' ';
        clear: both;
        display: table;

animation()
    prefix('animation', arguments)

animation-delay()
    prefix('animation-delay', arguments)

transform(args...)
    prefix(transform, args)

transition(args...)
    prefix(transition, args)

no-user-select()
    -webkit-touch-callout: none
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none

hardware-accelerated()
    prefix(transform, translateZ(0))
